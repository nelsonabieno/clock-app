<div class="form-container">
  <h1>Sign up Form </h1>
  <% if @user.errors.any? %>
      <% @user.errors.full_messages.each do |error| %>
          <div class="alert alert-danger mt-4" role="alert">
            <%= error %>
          </div>
      <% end %>
  <% end %>
  <%=form_for :user, class: "signupForm" do |f| %>
      <%= f.label :first_name %>
      <%= f.text_field :firstname, class: "form-control" %> <br />

      <%= f.label :last_name %>
      <%= f.text_field :lastname, class: "form-control" %> <br />

      <%= f.label :email, "Email Address" %>
      <%= f.text_field :email, class: "form-control" %> <br />

      <%= f.label :password %>
      <%= f.password_field :password, class: "form-control" %> <br />

      <%= f.label :password_confirmation, "Confirm Password" %>
      <%= f.password_field :password_confirmation, class: "form-control" %> <br />

      <%= f.label :time_zone, "Select Preferred Time Zone" %> <br />
      <%= time_zone_select :time_zone,  ActiveSupport::TimeZone.all %> <br />
      <%= f.submit "Create account", class: "btn btn-primary" %>
  <% end %>
  <br>
  Already have an account? <%= link_to "Login", login_path %>
</div>
